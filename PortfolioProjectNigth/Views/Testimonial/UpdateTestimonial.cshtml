﻿@model PortfolioProjectNigth.Models.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Referan Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.TestimonialID)

    <label>İsim </label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
    <br />
    <label>Yorum</label>
    @Html.TextAreaFor(x => x.Comment, new { @class = "form-control" })
    <br />
    <label>Fotoğraf Url'si</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Puan</label>
    @Html.TextBoxFor(x => x.Point, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Referansı Güncelle</button>
</form>