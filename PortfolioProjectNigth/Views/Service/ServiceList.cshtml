﻿@model List<PortfolioProjectNigth.Models.Service>

@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Hizmetlerim Listesi ve İşlemleri</h2>



<br />
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İkon</th>
        <th>Alt Başlık 1</th>
        <th>Alt Başlık 2</th>
        <th>Alt Başlık 3</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ServiceID</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Icon</td>
            <td>@item.SubTitle1</td>
            <td>@item.SubTitle2</td>
            <td>@item.SubTitle3</td>
            <td>
                <a href="/Service/UpdateService/@item.ServiceID" class="btn btn-warning">Güncelle</a>                
            </td>
            <td>
                <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>

<a href="/Service/CreateService/" class="btn btn-info">Yeni Hizmet Ekleme</a>