@model List<PortfolioProjectNigth.Models.Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
<style>
    #chartdiv {
        width: 100%;
        height: 500px;
    }
</style>

<h2>Yetenek Chartı</h2>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>

<script>
    window.onload = function () {
        var skillNames = [];
        var skillValues = [];

        @foreach (var skill in Model)
        {
            <text>
                skillNames.push("@skill.SkillName");
                skillValues.push(@skill.Rate);
            </text>
        }

        var ctx = document.getElementById('skillChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',  
            data: {
                labels: skillNames,
                datasets: [{
                    label: 'Yetenek Değerleri',
                    data: skillValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)',
                        'rgba(255, 159, 64, 0.7)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'Yetenek ve Değer Grafiği'
                },
                scales: {
                    y: {
                        beginAtZero: true, 
                        max: 100
                    }
                },
                plugins: {
                    datalabels: {
                        color: '#fff',
                        formatter: (value, ctx) => {

                            let percentage = value + '%';
                            return percentage;
                        },
                        font: {
                            weight: 'bold',
                            size: 14,
                        },
                    }
                }
            }
        });
    };
</script>

<div class="chart-container" style="width: 80%; max-width: 600px; margin: auto;">
    <canvas id="skillChart"></canvas>
</div>
